{
  "compilerOptions": {                           
    "lib": ["dom", "dom.iterable", "esnext"],                                        
     "jsx": "react-jsx",                                                                         
    "moduleResolution": "node",                     
    "allowJs": true,                                               
    "noEmit": true,                                                 
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                                               
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                   
    "resolveJsonModule":  true,
    "isolatedModules": true ,        
    "skipLibCheck": true                              
  },
  "include": ["src"]
}
